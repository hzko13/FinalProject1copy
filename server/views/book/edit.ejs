<%- include ../partials/header.ejs %>
<%- include ../partials/main_nav.ejs %>
<!-- Content or edit -->

<div class="container">
    <div class="row">
    <div class="col-md-offset-3 col-md-6">
        <h1>Edit Your Team</h1>
        <form class="form" method="post">
            
            <div class="form-group">
                <label for="nameTextField">Name of Team</label>
                <input type="text" class="form-control"
                id="nameTextField"
                placeholder="Enter The name of Team"
                name="name" 
                value="<% book.name %>"
                required>
            </div>

            <div class="form-group">
                <label for="AuthorTextField">League Class</label>
                <input type="text" class="form-control"
                id="AuthorTextField"
                placeholder="Enter Your Leauge Class A, B or C"
                name="author" 
                value="<% book.author %>"
                required>
            </div>

            <div class="form-group">
                <label for="publishedTextField">Season Entering</label>
                <input type="text" class="form-control"
                id="publishedTextField"
                placeholder="Enter the Season your Applying (fall, or summer)"
                name="published" 
                value="<% book.published %>"
                required>
            </div>

            <div class="form-group">
                <label for="DescriptionTextField">Members of the Team</label>
                <textarea type="text" class="form-control"
                id="DescriptionTextField"
                placeholder="Enter All first and Last names of team players seperated by commas."
                name= "description" required>
                <% book.description %>
                </textarea>
            </div>

            <div class="form-group">
                <label for="priceTextField">Number of players</label>
                <input type="number" class="form-control"
                id="priceTextField"
                placeholder="Enter the amount of players."
                name="price" 
                value="<% book.price %>"
                required>
            </div>
            <br>
            <button class="btn-btn-primary" type="submit">
                <i class= "fas fa-edit"></i>Submit</button>

            <a href="/book-list" class="btn btn-warning">
                <i class="fas fa-undo"></i>Cancel</a>
        </form>
    </div>
</div>
</div>

<%- include ../partials/bottom_nav.ejs %>
<%- include ../partials/footer.ejs %>